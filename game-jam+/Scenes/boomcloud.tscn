script/source = "extends Sprite2D


# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	scale*=randf_range(0.6,1.2)
	var tween = create_tween().set_parallel().set_ease(Tween.EASE_IN).set_trans(Tween.TRANS_EXPO)
	var time = randf_range(0.5,1.5)*scale.x*0.4
	tween.tween_property(self,\"scale\",Vector2(0,0),time)
	tween.tween_property(self,\"rotation\",randf_range(-2,2),time).set_ease(Tween.EASE_OUT)
	tween.tween_property(self,\"modulate\",Color.BLACK,time)
	await tween.finished
	queue_free()
