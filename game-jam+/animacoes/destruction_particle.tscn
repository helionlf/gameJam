script/source = "extends Node2D

@onready var part1: Sprite2D = $DestructionParticle
@onready var part2: Sprite2D = $DestructionParticle2
@onready var part3: Sprite2D = $DestructionParticle3
@onready var part4: Sprite2D = $DestructionParticle4

var particles
var speeds = [Vector2(-10,-20),Vector2(10,-20),Vector2(-10,0),Vector2(10,0)]

func _ready() -> void:
	scale = Vector2(0.5,0.5)
	particles = [part1,part2,part3,part4]
	var teen = create_tween().set_parallel()
	for i in particles: teen.tween_property(i,\"scale\",Vector2(0,0),0.5)
	await get_tree().create_timer(0.5).timeout
	queue_free()

func _process(delta: float) -> void:
	for i in 4:
		particles[i].position += speeds[i]*delta*10
		speeds[i].y += 100*delta
"

